<p><%= link_to image_tag("rebellion_logo.jpg"), main_page_path %></p>
<p><%= link_to 'About', about_page_path %></p>
<p><%= link_to 'Contact', contact_page_path %></p>
<p><a href="http://localhost:3000/admin">Admin</a></p>

<p>
  <%= form_tag product_search_path, method: :get do %>
    <%= text_field_tag :search_term, params[:search_term] %>
    <%= collection_select :id, :category_term, Category.all, :id, :name, {:selected => session[:search_category]} %>
    <%= submit_tag "Search", name: nil %>
  <% end %>
</p>

<p><%= render 'layouts/view_cart' %></p>

<p>
  <% if session[:customer_id].nil? %>
    <%= link_to 'Login', login_page_path %>
  <% else %>
    Hello, <%= current_customer.firstname %>
    <%= link_to 'Logout', logout_path %>
  <% end %>
</p>