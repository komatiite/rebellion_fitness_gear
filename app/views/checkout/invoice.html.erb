<h1>Invoice for order #<%= @order.id %></h1>

<ul>
  <% @product_orders.each do |item| %>
    <li>
        <%= item.product.name %>,
        quantity: <%= item.quantity %>,
        price: <%= number_to_currency item.price %>,
        total: <%= number_to_currency item.total_price %>
    </li>
  <% end %>
</ul>

<p>
  GST: <%= @order.gst %><br />
  PST: <%= @order.pst %><br />
  Total: <%= number_to_currency @order.total_price %>
</p>

